---
layout: null
---
[
  {% for post in site.posts %}
    {
      "title"    : "{{ post.title | escape }}",
      "category" : "{{ post.category }}",
      "tags"     : "{{ post.tags | array_to_sentence_string }}",
      "url"      : "{{ site.baseurl }}{{ post.url }}",
      "date"     : "{{ post.date | date: '%b %-d, %Y' }}",
      "content"  : "{{ post.content | strip_html | strip_newlines | escape }}",
      "article"  : "<div class='article col col-4 col-d-6 col-t-12 animate'> <div class='article__inner'> <div class='article__head'> <time class='article__date' datetime='{{post.date | date_to_xmlschema}}'>{{post.date | date_to_string}}</time>{% capture url_to_use %}{{ post.url }}{% endcapture %}{% if post.redirect_url %}{% capture url_to_use %}{{ post.redirect_url }}{% endcapture %}{% endif %}{% if post.video_embed %}<div class='video-icon'> <div class='circle pulse'></div><div class='circle'> <svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'> <polygon points='40,30 65,50 40,70'></polygon> </svg> </div></div>{% endif %}{% if post.image %}<img src='{{site.baseurl}}{{post.image}}' alt='{{post.image-alt | escape}}'>{% endif %}</div><div class='article__content'> <h2 class='article__title'>{{post.title | escape}} </h2>{% if post.description %}<p class='article__excerpt'>{{post.description | escape}}{% if post.nolink != true %} <a href='{{ url_to_use | prepend: site.baseurl }}'>Find out more.</a>{% endif %}</p>{% endif %}{% if post.description2 %}<br><p class='article__excerpt'>{{ post.description2 }}<a href='{{ post.redirect_url2 }}'> this page</a>.</p>{% endif %}</div></div></div>"
    } {% unless forloop.last %},{% endunless %}
  {% endfor %}
]
